{
  "name": "re-life-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/recovery-system/backend",
    "packages/recovery-system/frontend"
  ],
  "scripts": {
    "landing:dev": "npm run start --workspace=packages/landing",
    "landing:build": "npm run build --workspace=packages/landing",
    "recovery:backend": "npm run dev --workspace=packages/recovery-system/backend",
    "recovery:frontend": "npm run dev --workspace=packages/recovery-system/frontend",
    "dev:all": "concurrently \"npm run landing:dev\" \"npm run recovery:backend\" \"npm run recovery:frontend\"",
    "install:all": "npm install",
    "clean": "powershell -Command \"Remove-Item -Recurse -Force node_modules, packages/*/node_modules, packages/recovery-system/*/node_modules -ErrorAction SilentlyContinue\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "description": "Re-Life monorepo - Landing page and RAG-based addiction recovery system"
}
